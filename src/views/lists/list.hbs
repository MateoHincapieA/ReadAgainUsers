<div class="container p-4">
    <div class="row">
        {{#each lists}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{list_name}}
                        </h3>
                    </a>
                    <p class="m-2">{{list_description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="lists/delete/{{list_id}}">
                        Eliminar Lista
                    </a>
                    <a class="btn btn-secondary" href="lists/edit/{{list_id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay listas creadas</p>
                <a href="/lists/add">Crear una!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>